<?xml version="1.0" ?>
<configuration>
	<title>NOAA Weather Warnings, Watches, Advisories, and Statements</title>
    <description>
    	<![CDATA[
<B>Event</B>: {EVENT}		
<B>Urgency</B>: {URGENCY}	
<B>Severity</B>: {SEVERITY}	
<B>Certainty</B>: {CERTAINTY}
<B>From date</B>: {UTC_START}
<B>To date</B>: {UTC_END}
<B>Area</B>: {AREA_DESC}
	]]>
    </description>    
    <fields>
        <field name="EVENT"/>		
        <field name="URGENCY"/>	
        <field name="SEVERITY"/>	
        <field name="CERTAINTY"/>
        <field name="AREA_DESC"/>
        <field name="UTC_START">
		    <format dateformat="shortDateShortTime" useutc="true"/>
        </field>
        <field name="UTC_END">
		    <format dateformat="shortDateShortTime" useutc="true"/>
        </field>		
    </fields>
</configuration>