<?xml version="1.0" ?>
<configuration>
	<title>Active Fire Report</title>
    <description>
    	<![CDATA[
<B>Fire Name</B>: {FIRE_NAME}
<B>Location</B>: {LOCATION}
<B>State</B>: {STATE}
<B>Report Date</B>: {REPORT_DATE}
<B>Cause</B>: {CAUSE}
<B>Active</B>: {ACTIVE}
<B>Area</B>: {AREA_} {AREA_MEAS}
<B>Latitude</B>: {LATITUDE}
<B>Longitude</B>: {LONGITUDE}
	]]>
    </description>    
    <fields>
        <field name="FIRE_NAME"/> 
        <field name="LOCATION"/>		
        <field name="AREA_MEAS"/>
		<field name="AREA_"/>
        <field name="CAUSE"/>		
	    <field name="ACTIVE"/>		
        <field name="REPORT_DATE">
		    <format dateformat="shortDateShortTime"/>
        </field>
        <field name="LATITUDE"/> 
        <field name="LONGITUDE "/> 
        <field name="STATE"/> 
    </fields>
</configuration>