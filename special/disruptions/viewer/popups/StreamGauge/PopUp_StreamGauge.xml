<?xml version="1.0" ?>
<configuration>
	<title>Stream Gauge</title>
    <description>
    	<![CDATA[
<B>Location</B>: {LOCATION}		
<B>State</B>: {STATE}
<B>Water body</B>: {WATERBODY}
<B>Obstime</B>: {OBSTIME}
	]]>
    </description>    
    <fields>
        <field name="STAGE"/>		
        <field name="LOCATION"/>
		<field name="WATERBODY"/>
		<field name="STATE"/>
		<field name="OBSERVED"/>
		<field name="UNITS"/>
		<field name="MODERATE"/>
		<field name="MAJOR"/>
		<field name="URL"/>
        <field name="OBSTIME">
		    <format dateformat="shortDateShortTime" useutc="true"/>
        </field>
    </fields>
</configuration>