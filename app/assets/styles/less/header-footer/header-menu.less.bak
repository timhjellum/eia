        background: #fff;
        -webkit-border-radius: 0;
        -moz-border-radius: 0;
        border-radius: 0;
    }
   #fancybox-loading {
        background-image: url(/global/scripts/fancybox2/fancybox_sprite.png);
    }
    .fancybox-close,
    .fancybox-next span,
    .fancybox-prev span {
        background-image: none;
    }  
