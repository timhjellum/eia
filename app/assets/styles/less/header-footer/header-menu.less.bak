                                }
                            }
                        }
                        &.faq {
                            .faq-list {
                                &.left {
                                    .left;
                                    width: 42%;
                                    margin-left: 60px;
                                    clear: none;
                                }
                                &.right {
                                    .right;
                                    width: 42%;
                                    margin-left: 0;
                                    clear: none;
                                }
                            }
                        }
                        /*
                        &.energy-kids {
                            a {
                                padding: 0;
                                &.energy-kids {
                                    display: table;
                                    width: auto;
                                    .left;
                                }
                            }
                        }
                        */
                    }
                }
            }
        }
    }
}















@media @laptop {
    .fancybox-wrap {
        &.global-nav {
            .fancybox-inner {
                .section-tabs {
                    .sources-uses, .topics, .geography, .tools, .learn, .news {
                        &.left {
                            width: 50%;
                            margin: 0 0 1em 0;
                            padding: 0;
                            border-right: 1px solid shade(white, 17%);
                            .left;
                            > div {
                                width: 90%;
                                margin: 0 5%;
                                padding: 1em 0;
                            }
                        }
                        &.right {
                            width: 50%;
                            margin: 0 0 1em 0;
                            padding: 0;
                            .right;
                            > div {
                                width: 90%;
                                margin: 0 5%;
                                padding: 1em 0;
                            }
                        }
                    }
                    .a-z-bottom {
                        border: none;
                    }
                    .nav-menu {
                        &:last-child {
                            border-bottom: none;
                        }
                        &.energy-kids {
                            a {
                                &.energy-kids {
                                    .right;
                                }
                            }
                        }
                        &.a-z-index {
                            width: 95%;
                            margin: 0 2.5%;
                            padding: 1em 0 2em 0;
                            border-top: 1px solid shade(white, 17%);
                            border-bottom: none;
                            p {
                                margin-bottom: 5px;
                            }
                            .a-z-list {
                                font-size: 1em;
                                .font;
                                font-size: 1em;
                                margin-top: 10px;
                                a {
                                    padding: 0 4px;
                                }
                            }
                        }
                    }
                    .tabs-wrapper {
                        min-height: 95px;
                        border: none;
                        margin-bottom: 1em;
                        padding: 2em 0 0 1em;
                        ul {
                            width: 100%;
                            li {
                                a {
                                    font-size: 1.5rem;
                                }
                            }
                        }
                    }              
                }
            }
            .close-menu {
                position: absolute;
                cursor: pointer;
                z-index: 8040;
                top: 5px;
                right: 5px;
            }
        }
    }
}
@media @desktop {
    .fancybox-wrap {
        &.global-nav {
            .fancybox-inner {
                .section-tabs {
                    .tabs-wrapper {
                        ul {
                            li {
                                margin: 15px 24px 5px;
                                a {
                                    font-size: 1.3rem;
                                }
                            }
                        }
                    }
                }
            }
            .close-menu {
                top: -10px;
                right: -10px;
            }
        }
    }
}
