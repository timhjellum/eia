@media @mobile {
    .fancybox-overlay {
        background: rgba(0,0,0,0.7);
        position: fixed;
        bottom: 0;
        right: 0;
    }

    .fancybox-lock {
        overflow: visible !important;
        width: auto;
		body {
			overflow: hidden;
            position: fixed;

		}
	}
	.fancybox-skin {
		background: #fff;
		-webkit-border-radius: 0;
		-moz-border-radius: 0;
		border-radius: 0;
    }
	.fancybox-next {
		span {
			background-image: none;
		}
	}
	.fancybox-prev {
		span {
			background-image: none;
		}
	}
    .fancybox-wrap {
        &.global-nav {
            position: absolute;
            top: 0;
            left: 0;
            z-index: 8020;        
            &.fancybox-mobile {
                top: 0;
                left: 0;
                margin: 0 auto 0 auto;
                -moz-transition: opacity 0.4s ease-in-out;
                -o-transition: opacity 0.4s ease-in-out;
                -webkit-transition: opacity 0.4s ease-in-out;
                transition: opacity 0.4s ease-in-out;
            }

            .close-menu {
                position: absolute;
                cursor: pointer;
                z-index: 8040;
                top: 5px;
                right: 5px;
            }
        }
    }
}   
@media @laptop {
    .fancybox-wrap {
        &.global-nav {
            .close-menu {
                position: absolute;
                cursor: pointer;
                z-index: 8040;
                top: 5px;
                right: 5px;
            }
        }
    }
}